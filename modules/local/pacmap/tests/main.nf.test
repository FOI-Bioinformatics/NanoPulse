nextflow_process {

    name "Test PACMAP"
    script "../main.nf"
    process "PACMAP"

    tag "modules"
    tag "modules_local"
    tag "pacmap"

    test("Should reduce k-mer frequencies to PaCMAP coordinates") {

        when {
            process {
                """
                input[0] = [
                    [ id:'test', single_end:true ],
                    file(params.test_data['nanopore']['analysis']['kmer_freqs'], checkIfExists: true)
                ]
                input[1] = 3           // n_components
                input[2] = 15          // n_neighbors
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

    test("Should produce PaCMAP coordinates and plot") {

        when {
            process {
                """
                input[0] = [
                    [ id:'test_output', single_end:true ],
                    file(params.test_data['nanopore']['analysis']['kmer_freqs'], checkIfExists: true)
                ]
                input[1] = 3
                input[2] = 15
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert process.out.coords.size() == 1 },
                { assert process.out.plot.size() == 1 },
                { assert process.out.versions.size() == 1 },
                { assert process.out.coords[0][1].toString().endsWith('.umap_coords.tsv') },  // Drop-in replacement for UMAP
                { assert process.out.plot[0][1].toString().endsWith('.pacmap_plot.png') }
            )
        }

    }

    test("Should run with custom parameters") {

        when {
            process {
                """
                input[0] = [
                    [ id:'test_custom', single_end:true ],
                    file(params.test_data['nanopore']['analysis']['kmer_freqs'], checkIfExists: true)
                ]
                input[1] = 2           // 2D PaCMAP
                input[2] = 10          // fewer neighbors
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert process.out.coords.size() == 1 },
                { assert process.out.plot.size() == 1 }
            )
        }

    }

    test("Should handle different dimensionality") {

        when {
            process {
                """
                input[0] = [
                    [ id:'test_2d', single_end:true ],
                    file(params.test_data['nanopore']['analysis']['kmer_freqs'], checkIfExists: true)
                ]
                input[1] = 2           // 2D embedding
                input[2] = 15
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert process.out.coords.size() == 1 },
                { assert process.out.plot.size() == 1 }
            )
        }

    }

    test("Should run stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = [
                    [ id:'test_stub', single_end:true ],
                    file(params.test_data['nanopore']['analysis']['kmer_freqs'], checkIfExists: true)
                ]
                input[1] = 3
                input[2] = 15
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert process.out.coords.size() == 1 },
                { assert process.out.plot.size() == 1 },
                { assert process.out.coords[0][1].toString().endsWith('.umap_coords.tsv') },
                { assert process.out.plot[0][1].toString().endsWith('.pacmap_plot.png') }
            )
        }

    }

}
