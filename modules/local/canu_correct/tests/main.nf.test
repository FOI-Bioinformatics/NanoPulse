nextflow_process {

    name "Test CANU_CORRECT"
    script "../main.nf"
    process "CANU_CORRECT"

    tag "modules"
    tag "modules_local"
    tag "canu_correct"

    test("CANU_CORRECT - nanopore reads - successful correction") {

        when {
            process {
                """
                input[0] = [
                    [ id:'test', cluster_id:'0', single_end:true ],
                    file(params.test_data['nanopore']['reads']['cluster_fastq'], checkIfExists: true)
                ]
                input[1] = "1.5k"  // genome_size
                input[2] = 100     // polishing_reads
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

    test("CANU_CORRECT - stub run") {

        options "-stub"

        when {
            process {
                """
                input[0] = [
                    [ id:'test', cluster_id:'0', single_end:true ],
                    file(params.test_data['nanopore']['reads']['cluster_fastq'], checkIfExists: true)
                ]
                input[1] = "1.5k"
                input[2] = 100
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

    test("CANU_CORRECT - parameter variations") {

        when {
            process {
                """
                input[0] = [
                    [ id:'test', cluster_id:'5', single_end:true ],
                    file(params.test_data['nanopore']['reads']['cluster_fastq'], checkIfExists: true)
                ]
                input[1] = "1.8k"  // Different genome size
                input[2] = 50      // Fewer polishing reads
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(
                    process.out.versions
                ).match() }
            )
        }

    }

}
