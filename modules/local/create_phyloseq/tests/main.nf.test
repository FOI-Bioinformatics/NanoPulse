nextflow_process {

    name "Test CREATE_PHYLOSEQ"
    script "../main.nf"
    process "CREATE_PHYLOSEQ"

    tag "modules"
    tag "modules_local"
    tag "create_phyloseq"
    tag "phase_11"

    test("CREATE_PHYLOSEQ - complete inputs with diversity calculation") {

        when {
            process {
                """
                input[0] = [
                    [ id:'test' ],
                    file(params.test_data['phase11']['phyloseq_tree'], checkIfExists: true),
                    file(params.test_data['nanopore']['consensus']['abundances_csv'], checkIfExists: true),
                    file(params.test_data['nanopore']['consensus']['annotations_tsv'], checkIfExists: true)
                ]
                input[1] = true  // calculate_diversity
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

    test("CREATE_PHYLOSEQ - complete inputs without diversity calculation") {

        when {
            process {
                """
                input[0] = [
                    [ id:'test' ],
                    file(params.test_data['phase11']['phyloseq_tree'], checkIfExists: true),
                    file(params.test_data['nanopore']['consensus']['abundances_csv'], checkIfExists: true),
                    file(params.test_data['nanopore']['consensus']['annotations_tsv'], checkIfExists: true)
                ]
                input[1] = false  // calculate_diversity
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

    test("CREATE_PHYLOSEQ - verify phyloseq object components") {

        when {
            process {
                """
                input[0] = [
                    [ id:'test' ],
                    file(params.test_data['phase11']['phyloseq_tree'], checkIfExists: true),
                    file(params.test_data['nanopore']['consensus']['abundances_csv'], checkIfExists: true),
                    file(params.test_data['nanopore']['consensus']['annotations_tsv'], checkIfExists: true)
                ]
                input[1] = true
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

    test("CREATE_PHYLOSEQ - verify diversity calculation flag effect") {

        when {
            process {
                """
                input[0] = [
                    [ id:'test_diversity' ],
                    file(params.test_data['phase11']['phyloseq_tree'], checkIfExists: true),
                    file(params.test_data['nanopore']['consensus']['abundances_csv'], checkIfExists: true),
                    file(params.test_data['nanopore']['consensus']['annotations_tsv'], checkIfExists: true)
                ]
                input[1] = true  // calculate_diversity enabled
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

    test("CREATE_PHYLOSEQ - stub run") {

        options "-stub"

        when {
            process {
                """
                input[0] = [
                    [ id:'test' ],
                    file('test.tree'),
                    file('abundances.csv'),
                    file('taxonomy.tsv')
                ]
                input[1] = true
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

}
