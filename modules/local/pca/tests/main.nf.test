nextflow_process {

    name "Test PCA"
    script "../main.nf"
    process "PCA"

    tag "modules"
    tag "modules_local"
    tag "pca"

    test("Should perform PCA dimensionality reduction on k-mer frequencies") {

        when {
            process {
                """
                input[0] = [
                    [ id:'test', single_end:true ],
                    file(params.test_data['nanopore']['analysis']['kmer_freqs_npz'], checkIfExists: true),
                    file(params.test_data['nanopore']['analysis']['kmer_freqs_meta'], checkIfExists: true)
                ]
                input[1] = 50  // n_components
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

    test("Should produce PCA features and variance report") {

        when {
            process {
                """
                input[0] = [
                    [ id:'test_output', single_end:true ],
                    file(params.test_data['nanopore']['analysis']['kmer_freqs_npz'], checkIfExists: true),
                    file(params.test_data['nanopore']['analysis']['kmer_freqs_meta'], checkIfExists: true)
                ]
                input[1] = 50
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert process.out.features.size() == 1 },
                { assert process.out.variance_report.size() == 1 },
                { assert process.out.versions.size() == 1 },
                { assert process.out.features[0][1].toString().endsWith('.pca_features.tsv') },
                { assert process.out.variance_report[0][1].toString().endsWith('.variance_explained.json') }
            )
        }

    }

    test("Should run with custom n_components") {

        when {
            process {
                """
                input[0] = [
                    [ id:'test_custom', single_end:true ],
                    file(params.test_data['nanopore']['analysis']['kmer_freqs_npz'], checkIfExists: true),
                    file(params.test_data['nanopore']['analysis']['kmer_freqs_meta'], checkIfExists: true)
                ]
                input[1] = 25  // Fewer components
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert process.out.features.size() == 1 },
                { assert process.out.variance_report.size() == 1 }
            )
        }

    }

    test("Should handle small datasets gracefully") {

        when {
            process {
                """
                input[0] = [
                    [ id:'test_small', single_end:true ],
                    file(params.test_data['nanopore']['analysis']['kmer_freqs_npz'], checkIfExists: true),
                    file(params.test_data['nanopore']['analysis']['kmer_freqs_meta'], checkIfExists: true)
                ]
                input[1] = 10  // Very few components
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert process.out.features.size() == 1 },
                { assert process.out.variance_report.size() == 1 }
            )
        }

    }

    test("Should run stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = [
                    [ id:'test_stub', single_end:true ],
                    file(params.test_data['nanopore']['analysis']['kmer_freqs_npz'], checkIfExists: true),
                    file(params.test_data['nanopore']['analysis']['kmer_freqs_meta'], checkIfExists: true)
                ]
                input[1] = 50
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert process.out.features.size() == 1 },
                { assert process.out.variance_report.size() == 1 },
                { assert process.out.features[0][1].toString().endsWith('.pca_features.tsv') },
                { assert process.out.variance_report[0][1].toString().endsWith('.variance_explained.json') }
            )
        }

    }

}
