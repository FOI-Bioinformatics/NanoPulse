nextflow_process {

    name "Test UMAP"
    script "../main.nf"
    process "UMAP"

    tag "modules"
    tag "modules_local"
    tag "umap"

    test("Should reduce k-mer frequencies to UMAP coordinates") {

        when {
            process {
                """
                input[0] = [
                    [ id:'test', single_end:true ],
                    file(params.test_data['nanopore']['analysis']['kmer_freqs'], checkIfExists: true)
                ]
                input[1] = 3           // n_components
                input[2] = 15          // n_neighbors
                input[3] = 0.1         // min_dist
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

    test("Should produce UMAP coordinates and plot") {

        when {
            process {
                """
                input[0] = [
                    [ id:'test_output', single_end:true ],
                    file(params.test_data['nanopore']['analysis']['kmer_freqs'], checkIfExists: true)
                ]
                input[1] = 3
                input[2] = 15
                input[3] = 0.1
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert process.out.coords.size() == 1 },
                { assert process.out.plot.size() == 1 },
                { assert process.out.versions.size() == 1 },
                { assert process.out.coords[0][1].toString().endsWith('.umap_coords.tsv') },
                { assert process.out.plot[0][1].toString().endsWith('.umap_plot.png') }
            )
        }

    }

    test("Should run with custom parameters") {

        when {
            process {
                """
                input[0] = [
                    [ id:'test_custom', single_end:true ],
                    file(params.test_data['nanopore']['analysis']['kmer_freqs'], checkIfExists: true)
                ]
                input[1] = 2           // 2D UMAP
                input[2] = 10          // fewer neighbors
                input[3] = 0.05        // smaller min_dist
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert process.out.coords.size() == 1 },
                { assert process.out.plot.size() == 1 }
            )
        }

    }

    test("Should run stub") {

        options "-stub"

        when {
            process {
                """
                input[0] = [
                    [ id:'test_stub', single_end:true ],
                    file(params.test_data['nanopore']['analysis']['kmer_freqs'], checkIfExists: true)
                ]
                input[1] = 3
                input[2] = 15
                input[3] = 0.1
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert process.out.coords.size() == 1 },
                { assert process.out.plot.size() == 1 },
                { assert process.out.coords[0][1].toString().endsWith('.umap_coords.tsv') },
                { assert process.out.plot[0][1].toString().endsWith('.umap_plot.png') }
            )
        }

    }

}
