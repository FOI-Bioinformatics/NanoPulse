/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config for tests directory
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Loads test data configuration for nf-test
----------------------------------------------------------------------------------------
*/

// Load test data paths
includeConfig 'config/nf-test.config'

// Override resource requirements for testing
process {
  withLabel:process_low {
    cpus = 1
    memory = 2.GB
    time = 1.h
  }
  withLabel:process_medium {
    cpus = 2
    memory = 4.GB
    time = 2.h
  }
  withLabel:process_high {
    cpus = 2
    memory = 6.GB
    time = 4.h
  }
  withLabel:process_long {
    time = 6.h
  }
}

// Set resource limits
params {
  max_cpus = 2
  max_memory = 6.GB
  max_time = 48.h
}
